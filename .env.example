# RulePy Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite:///rules.db

# PostgreSQL (optional)
# DATABASE_URL=postgresql://username:password@localhost:5432/rulepy

# MySQL (optional)  
# DATABASE_URL=mysql://username:password@localhost:3306/rulepy

# Application Settings
APP_NAME=RulePy
APP_VERSION=1.0.0
MAX_RULES_PER_USER=1000

# Analytics Settings (future use)
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=365

# Export Settings
MAX_EXPORT_SIZE=10000
EXPORT_FORMATS=json,csv

# Security Settings (future use)
SESSION_TIMEOUT=3600
BCRYPT_LOG_ROUNDS=12

# Email Settings (future use)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# External APIs (future use)
OPENAI_API_KEY=your-openai-key-for-ai-insights
GOOGLE_ANALYTICS_ID=your-ga-id
